<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<EditText
		android:id="@+id/edit_config_name" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:hint="@string/edit_config_name"
		android:layout_weight="0"/>

	<EditText
		android:id="@+id/edit_config_content"
		android:hint="@string/edit_config_content"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:scrollbars="vertical"
		android:textSize="10sp"/>
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button
			android:id="@+id/edit_config_save" 
			android:text="@android:string/ok"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<Button
			android:id="@+id/edit_config_cancel" 
			android:text="@android:string/cancel"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>

</LinearLayout>