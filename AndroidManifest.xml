<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="de.schaeuffelhut.android.openvpn"
	android:versionCode="1"
	android:versionName="0.1">
	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name">

		<activity
			android:name=".OpenVPN"
			android:label="@string/app_name">
		</activity>
		<activity
			android:name="OpenVPNSettings"
			android:label="OpenVPN Preferences">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<service
			android:name="ControlShell"
			android:label="ControlShell"
			android:exported="false"
			android:enabled="true" />

		<receiver
			android:name="BootCompletedReceiver"
			android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
			<intent-filter>
				<action
					android:name="android.intent.action.BOOT_COMPLETED"></action>
			</intent-filter>
		</receiver>

		<activity
			android:label="Import Files"
			android:name="ImportFiles" />

		<activity
			android:name="Monitor"
			android:label="OpenVPN Monitor" />
</application>
</manifest> 